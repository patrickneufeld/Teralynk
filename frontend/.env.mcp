# MCP Integration Environment Config for Frontend
# ================================================

# Toggle MCP integration (true = enabled)
VITE_ENABLE_MCP=true

# Base URL for MCP API calls (adjust to your backend)
VITE_MCP_API_BASE_URL=http://localhost:5001/api/mcp

# Default protocol (e.g., minecraft, notion, aws-lambda, shell)
VITE_MCP_DEFAULT_PROTOCOL=minecraft

# Use WebSocket or polling for real-time updates
VITE_MCP_CONNECTION_METHOD=websocket

# Optional: Auth header key for secure MCP commands
VITE_MCP_AUTH_HEADER=Authorization

# Enable experimental MCP protocols/features
VITE_MCP_ENABLE_EXPERIMENTAL=false

# Show or hide MCP server selector in UI
VITE_MCP_SERVER_SELECTOR=true

# Optional: Default region or zone for MCP runtime
VITE_MCP_REGION=us-east-1

# Enable verbose MCP logging in frontend
VITE_MCP_DEBUG=true
